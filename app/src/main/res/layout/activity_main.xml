<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexapps.movienight.ui.MainActivity"
    android:background="#01d277">

    <TextView
        android:text="@string/movie_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:textColor="@color/colorPrimary"
        android:textSize="34sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_above="@+id/submitButton"
        android:layout_below="@+id/typeInfoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <CheckBox
                android:text="@string/movies_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/moviesCheckBox"
                android:checked="true"
                android:textSize="16sp"
                android:textColor="#ccffffff"
                android:layout_weight="50"
                />

            <CheckBox
                android:text="@string/tv_shows_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/showsCheckBox"
                android:textSize="16sp"
                android:textColor="#ccffffff"
                android:layout_weight="50"
                android:checked="true"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/movie_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/genres1InfoTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="45"/>

            <TextView
                tools:text="@string/all_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectedMovieGenresTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="45"/>

            <Button
                android:text="@string/dots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectMovieGenresButton"
                android:layout_weight="10"
                android:textSize="10sp"
                android:textColor="#ffffffff"
                android:background="@color/colorPrimary"
                android:elevation="1dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/tv_show_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/genres2InfoTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="45"/>

            <TextView
                tools:text="@string/all_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectedTVGenresTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="45"/>

            <Button
                android:text="@string/dots"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/selectShowsGenreButton"
                android:layout_weight="10"
                android:textSize="10sp"
                android:textColor="#ffffffff"
                android:background="@color/colorPrimary"
                android:elevation="1dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/rating_and_release_dates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ratingHeaderTextView"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:layout_weight="100"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/movie_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ratingInfoTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="45"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ratingEditText"
                android:layout_weight="15"
                android:hint="7.0"
                android:textSize="16sp"
                android:background="@android:color/white"
                android:textColor="#01d277"
                android:textColorHint="@android:color/darker_gray"
                android:textAlignment="center"
                android:maxLength="4"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/number_of_votes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/votesInfotextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="45"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/votesEditText"
                android:layout_weight="35"
                android:hint="100"
                android:textSize="16sp"
                android:background="@android:color/white"
                android:textColor="#01d277"
                android:textColorHint="@android:color/darker_gray"
                android:textAlignment="center"
                android:maxLength="8"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="100"
            android:layout_weight="10">

            <TextView
                android:text="@string/release_dates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/releaseDatesInfoTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_weight="39"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/yearFromSpinner"
                android:layout_weight="28"/>

            <TextView
                android:text="@string/dash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dashTextView"
                android:layout_weight="5"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textAlignment="center"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/yearToSpinner"
                android:layout_weight="28"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/sort_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sortByInfoTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_marginTop="5dp"
                android:layout_weight="45"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sortTypeSpinner"
                android:layout_weight="55"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100">

            <TextView
                android:text="@string/view_results"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/viewSortInfoTextView"
                android:textSize="18sp"
                android:textColor="#ccffffff"
                android:layout_marginTop="5dp"
                android:layout_weight="45"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/SortAscDescSpinner"
                android:layout_weight="55"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="@string/search_for"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typeInfoTextView"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:textSize="20sp"
        android:background="#40ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
